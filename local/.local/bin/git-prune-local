#!/bin/bash

if [[ "$#" -lt 1 || "$1" == '-h' || "$1" == '--help' ]]
then
  echo "USAGE: $(basename $0) REMOTE"
  echo "Deletes all local branches whose tracking branches have been deleted off the remote."
  exit 1
fi

set -Eeuo pipefail

REMOTE="$1"

git checkout master
git remote prune "$REMOTE"
git branch -vv | grep "\[$REMOTE/.*: gone\]" | fex 1 | xargs git branch -D
