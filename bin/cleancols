#!/bin/bash

if [[ "$1" == "-h" || "$1" == "--help" ]]
then
  echo "Replaces whitespace on each line in a file with tabs."
  echo "USAGE: $(basename $0) [NEW_DELIM='\t'] < IN > OUT"
  exit 1
fi

DELIM=${1:-'\t'}
if [[ $(uname) == 'Darwin' ]]; then
    SED='sed -E'
else
    SED='sed -r'
fi

exec $SED -e 's/\s+/'"${DELIM}"'/g' -e 's/(\.[[:digit:]]{0,6})[[:digit:]]*/\1/g'
